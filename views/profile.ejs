<%- include partial/header %>
<%- include partial/navbar %>

<div id="userProfile" class="container">
  <div class="row">
    <div class="col-sm-4 profileleftpanel">
      <div class="card" style="width:100%;height:auto">
        <img class="card-img-top" src="http://localhost:3010/images/defaultImages/defaultUser.png" alt="User Image" style="width:100%;">
        <div class="card-body">
          <h3><%=data[0].first_name%>, <%=data[0].last_name%></h3>
          <div>
            <label>User Name: </label>
            <input type="text" style="border:none" value="<%=data[0].user_name%>" readonly="readonly"/>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-8 profilerightpanel">
      <form action="/" method="post" enctype="text/plain">
        <div class="form-group row">
          <label class="col-sm-3">Phone Number: </label>
          <div class="col-sm-6">
            <input class="form-control" type="text" style="border:none" value="<%=data[0].mob_no%>"/>  
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3">Gender: </label>
          <div class="col-sm-6">
            <input class="form-control" type="text" style="border:none" value="<%=data[0].gender%>"/>  
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
 <%- include partial/footer %>