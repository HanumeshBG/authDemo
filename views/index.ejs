<h3 class="text-center welcometxt"> Welcome to Leave Management System </h3>

<div id="loginform" class="container"> 
      <div class="d-flex justify-content-center">
        <div id="login_div_card" class="card">
          <div class="card-header">
            <h3>Sign In</h3>
          </div>
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                  <input class="form-control" type="text" name="user_name" placeholder="Enter User Name"></input>    
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                  <input class="form-control" type="password" name="password" placeholder="Enter your Password"></input>
              </div>
              <div class="form-group">
                <button class="btn btn-primary lgn_btn">Login</button>
              </div>
            </form>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-center links">
              Don't have an account?<a href="/signup"> Sign Up</a>
            </div>
          </div>
        </div>
      </div>
</div>